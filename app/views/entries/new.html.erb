<h1>New Journal Entry for <%= Place.find_by({ "id" => params["place_id"] })["name"] %></h1>

<form action="/entries" method="post">
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
  </p>

  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description"></textarea>
  </p>

  <p>
    <label for="occurred_on">Date</label>
    <input type="date" name="occurred_on" id="occurred_on">
  </p>

  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <button>Submit</button>
  <a href="/places/<%= params["place_id"] %>">Cancel</a>
</form>